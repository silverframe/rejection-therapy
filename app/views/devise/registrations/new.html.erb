<head>
  <style>
    body {
      background-color: rgb(228, 233, 235);
    }
    .background-image {
      /*background-image: url('http://666a658c624a3c03a6b2-25cda059d975d2f318c03e90bcf17c40.r92.cf1.rackcdn.com/unsplash_527bf56961712_1.JPG');*/
      background-image: url('/images/background7.jpg');
      background-size: cover;
      display: block;
      filter:blur(5px);
      -webkit-filter: blur(5px);
      height: 800px;
      left: 0;
      position: fixed;
      right: 0;
      z-index: 1;
      top: -10px;
    }
    .content {
      /*background: rgba(255, 255, 255, 0.35);*/
      border-radius: 3px;
      /*box-shadow: 0 1px 5px rgba(0, 0, 0, 0.25);*/
      font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
      top: 100px;
      left: 0;
      position: fixed;
      margin-left: 20px;
      margin-right: 20px;
      right: 0;
      z-index: 2;
      padding: 0 10px;
    }
    input {
      width: 118%;
      margin: 0 auto;
      border-radius: 3px;
      border: none;
      height: 25px;
      text-align: center;
    }
    .login {
      margin: 30px auto;
      width: 30%;
      align-items: center;
      min-width: 300px; 

    }
    .login-screen {
      /*background-color: #FFF;*/
      background: rgba(255, 255, 255, 0.65);
      box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);
      padding: 20px;
      border-radius: 5px;
      justify-content: center;
      margin-bottom: 10px;
    }
    .new_user {
      margin: 0 auto;
    }
    .actions {
      width: 30%;
    }
    .app-title {
      text-align: center;
      font-family: 'Leckerli One', cursive;
      padding-bottom: 10px;
    }
    .list {
      text-align: center;
      color: #777;
    }
    .input-form {
      /*padding-left: 13px;*/
      padding-bottom: 13px;
      margin-left: 17px;

      display: block;
      justify-content: center;
      text-align: center;
    }
    .actions {
      display: block;
      margin-left: auto;
      margin-right: 63px;
      width: 80%;
    }

  </style>
</head>
<div class="background-image"></div>
<div class="content">
  <div class="login">
    <div class="login-screen">

      <div class="app-title" "brand-name">
        <h2>Sign up</h2>
      </div>
      <div class="input-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.text_field :username, autofocus: true, :placeholder =>"Username" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, :placeholder =>"Your Email" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "off",:placeholder =>"Password"  %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off",:placeholder =>"Confirm Password"  %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
